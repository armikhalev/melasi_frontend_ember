<label class="word-filter-source-label">{{ settings.source_language }}</label>

{{input value=value
        english_cur=english_cur
        key-up=(action 'handleFilterEntry')
        class="word-filter-input"
        placeholder=settings.input_placeholder
        autofocus='autofocus'}}

<div class="word-filter-row">
    <label class="word-filter-target-label">{{ settings.target_language }}</label>

    <button {{action "changeLanguage_onClick"}} type="submit" class="word-filter-change-button">{{ settings.button_change }}</button>
</div>

<div class="word-results-row">
    {{yield results}}
</div>
